generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ActionLog {
  id        String   @id @default(cuid())
  agent     Agent    @relation(fields: [agentId], references: [id])
  agentId   String
  timestamp DateTime @default(now())
  toolName  String
  arguments Json
  status    String // "success" or "failure"
  result    Json?
  tokens    Int?
}

model Agent {
  id          String    @id @default(cuid())
  name        String
  type        AgentType
  description String?
  status      String    @default("idle")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  logs        ActionLog[]
}

enum AgentType {
  CONVERSATIONAL
  WEB_INTELLECT
  TASK_ORCHESTRATOR
  CONTENT_SYNTHESIZER
  DATA_CRUNCHER
  SUPPORT_RESPONDER
}
