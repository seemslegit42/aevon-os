
datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

/// Represents an AI agent within the system.
model Agent {
  id          String    @id @default(cuid())
  name        String
  type        AgentType
  description String
  status      String    @default("idle")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  logs        ActionLog[]
}

/// Logs a single action taken by an agent.
model ActionLog {
  id        String   @id @default(cuid())
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  agentId   String
  timestamp DateTime @default(now())
  toolName  String
  arguments Json
  status    String // "success" or "failure"
  result    Json?
  tokens    Int?

  @@index([agentId])
}

enum AgentType {
  CONVERSATIONAL
  WEB_INTELLECT
  TASK_ORCHESTRATOR
  CONTENT_SYNTHESIZER
  DATA_CRUNCHER
  SUPPORT_RESPONDER
}
